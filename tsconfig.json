{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "types": [
      "react-native",
      "jest",
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "@types",
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "types/*": [
        "./@types/*"
      ]
    }
  },
  "include": ["src", "./@types/*"]
}